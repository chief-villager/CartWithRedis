@model LoginRequestDto

@{
    ViewData["Title"] = "Login";
}

<h1>@ViewData["Title"]</h1>
<form>
    <div class=" form-group">
        <h4><Strong>Welcome</Strong></h4>
        <div asp-validation-summary="All">
            <div class="col-6">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                    placeholder="Enter email">
                @* <span asp-validation-for="Email" class="text-danger"></span> *@
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-6">
            <label asp-for="Password"></label>
            <input type="password" asp-for="Password" class="form-control" id="inputEmail4" placeholder="">
            @* <span asp-validation-for="Password" class="text-danger"></span> *@
        </div>
    </div>
    <div class="d-grid gap-2 col-6">
        <button type="submit" class="btn btn-primary">Log In</button>
        <a asp-area="" class="nav-link text-dark" asp-controller="cart" asp-action="Register">Set up your online account
            or
            get help signing in.</a>
    </div>

</form>